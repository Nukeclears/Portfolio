{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "layer",
        "tailwind"
      ]   
    }],
    "font-family-no-missing-generic-family-keyword": [ false ],
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "s"]
  }
}