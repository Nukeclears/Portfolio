{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "layer",
        "tailwind"
      ]   
    }],
    "indentation": "tab",
    "block-no-empty": null,
    "max-empty-lines": 2,
    "unit-allowed-list": ["em", "rem", "s"]
  }
}